<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="googlesignin" controller="com.gameshopcorp.gameshop.gui.MyStartScreen">
        <!--
        <layer childLayout="center">
            <text color="#ffff" font="aurulent-sans-16.fnt" text="Hello World!" align="center" valign="center"/>
        </layer>
        -->

        <layer id="GLayer0" childLayout="center">
            <panel id="panel_left" width="20%" height="100%" childLayout="vertical">


            </panel>

            <panel id="panel_middle" width="60%" height="100%" childLayout="vertical">
                <panel id="panel_middle_topspace" width="100%" height="20%" childLayout="vertical"></panel>

                <panel id="panel_middle_icon" width="100%" height="30%" childLayout="vertical">
                    <image filename="Interface/rune_icon-playstore.png" childLayout="vertical">
                    </image>
                </panel>
                <panel id="panel_middle_space" width="100%" height="20%" childLayout="center">
                    <text color="#ffff"  font="Interface/Fonts/Ubuntu.fnt" text="GameShop" align="center" valign="center"/>

                </panel>

                <panel id="panel_login_button" width="100%" height="10%" backgroundColor="#1aef" childLayout="center">

                    <interact onClick="gotologinscreen()"/>
<!--                    <image filename="Interface/android_dark_rd_ctn@4x.png" childLayout="vertical">-->

<!--                    </image>-->
                    <text color="#ffff" font="Interface/Fonts/Ubuntu.fnt" text="Login" align="center" valign="center"/>

                </panel>
                <panel id="panel_break" width="100%" height="5%" backgroundColor="#0000" childLayout="center">


                </panel>
                <panel id="panel_signup_button" width="100%" height="10%" backgroundColor="#1aef" childLayout="center">

                    <interact onClick="gotosignupscreen()"/>
                    <text color="#ffff" font="Interface/Fonts/Ubuntu.fnt" text="Sign Up" align="center" valign="center"/>

                    <!--                    <image filename="Interface/android_dark_rd_ctn@4x.png" childLayout="vertical">-->

<!--                    </image>-->
                </panel>






            </panel>
            <panel id ="panel_right" width="20%" height="100%" childLayout="vertical"> </panel>
        </layer>
        <layer id="keyboard" childLayout="center" >
        <panel id="keyboardPanel" width="100%" height="50%" childLayout="center" backgroundColor="#ffff">

        </panel>
        </layer>
    </screen>
</nifty>